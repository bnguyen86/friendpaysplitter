<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="CreateEventFragment"
    >
    <TextView
        android:id="@+id/eventDetailsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_details"
        android:textSize="14pt"
        android:layout_alignParentStart="true"/>
    <EditText
        android:id="@+id/eventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_name"
        android:layout_below="@id/eventDetailsHeading"
        android:textSize="12pt"
        />
    <EditText
        android:id="@+id/eventDate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/event_date"
        android:layout_below="@id/eventName"
        android:onClick="showDatePickerDialog"
        android:inputType="date"

        />
    <EditText
        android:id="@+id/eventDescription"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:hint="@string/event_description"
        android:layout_below="@id/eventDate"
        android:inputType="textMultiLine"
        android:lines="10"

        />
    <ImageButton
        android:id="@+id/eventDateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/eventDate"
        android:layout_below="@id/eventName"
        android:src="@drawable/ic_event_white_24dp"
        android:onClick="showDatePickerDialog"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_friends"
        android:textSize="14pt"
        android:layout_below="@id/eventDescription"/>


</RelativeLayout>
